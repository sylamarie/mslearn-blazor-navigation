@page "/checkout"
@inject OrderState OrderState
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="main">
    <EditForm EditContext="editContext" OnValidSubmit="PlaceOrder">
        <div class="checkout-cols">
            <div class="checkout-order-details">
                <h4>Review order</h4>
                <OrderReview Order="Order" />
            </div>

            <div class="checkout-delivery-address">
                <h4>Deliver to...</h4>

                @if (isError)
                {
                    <div class="alert alert-danger">
                        Please enter a name and address.
                    </div>
                }

                <AddressEditor Address="Order.DeliveryAddress" />
            </div>
        </div>

        <!-- use isError to enable/disable -->
        <button class="checkout-button btn btn-warning"
                type="Submit"
                disabled="@isError">
            Place order
        </button>

        <ValidationSummary />
        <DataAnnotationsValidator />
    </EditForm>
</div>

@code {
    Order Order => OrderState.Order;

    // NEW: EditContext instead of Model=
    private EditContext editContext;

    // true = button disabled + error banner shown
    bool isError = true;

    protected override void OnInitialized()
    {
        // track validation for the DeliveryAddress model
        editContext = new EditContext(Order.DeliveryAddress);
        editContext.OnFieldChanged += HandleFieldChanged;

        // start with button disabled (nothing filled in yet)
        isError = !editContext.Validate();
    }

    private void HandleFieldChanged(object? sender, FieldChangedEventArgs e)
    {
        // if any field invalid â†’ isError = true (button disabled)
        isError = !editContext.Validate();
        StateHasChanged();
    }

    async Task PlaceOrder()
    {
        // at this point the form is valid
        var response = await HttpClient.PostAsJsonAsync(
            $"{NavigationManager.BaseUri}orders",
            OrderState.Order);

        var newOrderId = await response.Content.ReadFromJsonAsync<int>();

        OrderState.ResetOrder();
        NavigationManager.NavigateTo($"myorders/{newOrderId}");
    }

    // clean up event handler
    public void Dispose()
    {
        if (editContext is not null)
        {
            editContext.OnFieldChanged -= HandleFieldChanged;
        }
    }
}
